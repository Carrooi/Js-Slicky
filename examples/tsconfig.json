{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noEmitHelpers": false,
		"types": [
			"zone.js"
		],
		"lib": ["es5", "es2015.promise", "es2015.iterable", "es2015.collection", "dom"]
	},
	"include": [
		"./app/bootstrap.ts"
	],
	"exclude": [
		"./node_modules"
	],
	"compileOnSave": false,
	"buildOnSave": false
}
